<body>
    <div class="game-container">
        <h1>Ë∂£Âë≥Êï∞Áã¨</h1>
        
        <div class="controls">
            <div class="difficulty">
                <button class="diff-btn active" data-diff="easy">ÁÆÄÂçï</button>
                <button class="diff-btn" data-diff="medium">‰∏≠Á≠â</button>
                <button class="diff-btn" data-diff="hard">Âõ∞Èöæ</button>
            </div>
            <button id="hint-btn">ÊèêÁ§∫ (3Ê¨°)</button>
            <button id="note-mode-btn" class="note-mode-btn">Á¨îËÆ∞Ê®°Âºè</button>
            <button id="reset-btn">ÈáçÁΩÆÊ∏∏Êàè</button>
            <button id="check-btn">Ê£ÄÊü•Á≠îÊ°à</button>
        </div>

        <div class="sudoku-grid" id="sudokuGrid"></div>
        
        <div class="number-pad" id="numberPad">
            <div class="number-btn" data-num="1">1</div>
            <div class="number-btn" data-num="2">2</div>
            <div class="number-btn" data-num="3">3</div>
            <div class="number-btn" data-num="4">4</div>
            <div class="number-btn" data-num="5">5</div>
            <div class="number-btn" data-num="6">6</div>
            <div class="number-btn" data-num="7">7</div>
            <div class="number-btn" data-num="8">8</div>
            <div class="number-btn" data-num="9">9</div>
        </div>

        <div class="message" id="message"></div>
    </div>

    <script>
        // Ê†∏ÂøÉÂèòÈáè
        let sudokuGrid = [];       // Áé©ÂÆ∂ÂΩìÂâçÊ£ãÁõò
        let solutionGrid = [];     // Ê†áÂáÜÁ≠îÊ°à
        let notesGrid = [];        // Á¨îËÆ∞Êï∞ÊçÆ
        let selectedCell = null;   // ÈÄâ‰∏≠ÁöÑÂçïÂÖÉÊ†º
        let isNoteMode = false;    // ÊòØÂê¶ÂºÄÂêØÁ¨îËÆ∞Ê®°Âºè
        let hintCount = 3;         // ÊèêÁ§∫Ê¨°Êï∞
        let difficulty = 'easy';   // ÈªòËÆ§ÈöæÂ∫¶

        // ÂàùÂßãÂåñÊ∏∏Êàè
        initGame();

        // ÁîüÊàêÊï∞Áã¨ÔºàÊ†∏ÂøÉÁÆóÊ≥ïÔºâ
        function generateSudoku() {
            // ÂàùÂßãÂåñÁ©∫Ê£ãÁõò
            const grid = Array(9).fill().map(() => Array(9).fill(0));
            
            // Â°´ÂÖÖÂØπËßíÁ∫ø3x3ÂÆ´Ê†ºÔºà‰øùËØÅÊúâËß£Ôºâ
            for (let i = 0; i < 9; i += 3) {
                fillBox(grid, i, i);
            }
            
            // Â°´ÂÖÖÂâ©‰ΩôÂçïÂÖÉÊ†º
            fillRemaining(grid, 0, 3);
            
            // ÁîüÊàêË∞úÈ¢òÔºàÊåñÁ©∫Ôºâ
            const puzzle = createPuzzle([...grid.map(row => [...row])]);
            return { puzzle, solution: grid };
        }

        // Â°´ÂÖÖ3x3ÂÆ´Ê†º
        function fillBox(grid, row, col) {
            let nums = [1,2,3,4,5,6,7,8,9].sort(() => Math.random() - 0.5);
            let idx = 0;
            for (let i = 0; i < 3; i++) {
                for (let j = 0; j < 3; j++) {
                    grid[row+i][col+j] = nums[idx++];
                }
            }
        }

        // Ê£ÄÊü•Êï∞Â≠óÊòØÂê¶ÂèØÊîæÁΩÆ
        function isSafe(grid, row, col, num) {
            // Ê£ÄÊü•Ë°å
            for (let i = 0; i < 9; i++) {
                if (grid[row][i] === num) return false;
            }
            // Ê£ÄÊü•Âàó
            for (let i = 0; i < 9; i++) {
                if (grid[i][col] === num) return false;
            }
            // Ê£ÄÊü•3x3ÂÆ´Ê†º
            const boxRow = row - row % 3;
            const boxCol = col - col % 3;
            for (let i = 0; i < 3; i++) {
                for (let j = 0; j < 3; j++) {
                    if (grid[boxRow+i][boxCol+j] === num) return false;
                }
            }
            return true;
        }

        // ÈÄíÂΩíÂ°´ÂÖÖÂâ©‰ΩôÂçïÂÖÉÊ†º
        function fillRemaining(grid, row, col) {
            if (col >= 9 && row < 8) {
                row++;
                col = 0;
            }
            if (row >= 9 && col >= 9) return true;
            if (row < 3) {
                if (col < 3) col = 3;
            } else if (row < 6) {
                if (col === Math.floor(row/3)*3) col += 3;
            } else {
                if (col === 6) {
                    row++;
                    col = 0;
                    if (row >= 9) return true;
                }
            }

            for (let num = 1; num <= 9; num++) {
                if (isSafe(grid, row, col, num)) {
                    grid[row][col] = num;
                    if (fillRemaining(grid, row, col+1)) return true;
                    grid[row][col] = 0;
                }
            }
            return false;
        }

        // ÁîüÊàêË∞úÈ¢òÔºàÊ†πÊçÆÈöæÂ∫¶ÊåñÁ©∫Ôºâ
        function createPuzzle(grid) {
            let emptyCount = 0;
            // ÈöæÂ∫¶ÂØπÂ∫îÊåñÁ©∫Êï∞Èáè
            const diffConfig = {
                easy: 30,    // ÁÆÄÂçïÔºöÊåñ30‰∏™Á©∫
                medium: 40,  // ‰∏≠Á≠âÔºöÊåñ40‰∏™Á©∫
                hard: 50     // Âõ∞ÈöæÔºöÊåñ50‰∏™Á©∫
            };

            while (emptyCount < diffConfig[difficulty]) {
                const row = Math.floor(Math.random() * 9);
                const col = Math.floor(Math.random() * 9);
                if (grid[row][col] !== 0) {
                    grid[row][col] = 0;
                    emptyCount++;
                }
            }
            return grid;
        }

        // ÂàùÂßãÂåñÊ∏∏Êàè
        function initGame() {
            // ÁîüÊàêÊñ∞Êï∞Áã¨
            const { puzzle, solution } = generateSudoku();
            sudokuGrid = puzzle;
            solutionGrid = solution;
            
            // ÂàùÂßãÂåñÁ¨îËÆ∞ÁΩëÊ†º
            notesGrid = Array(9).fill().map(() => Array(9).fill(new Set()));
            
            // ÈáçÁΩÆÁä∂ÊÄÅ
            hintCount = 3;
            selectedCell = null;
            document.getElementById('hint-btn').textContent = `ÊèêÁ§∫ (${hintCount}Ê¨°)`;
            document.getElementById('message').textContent = '';
            
            // Ê∏≤ÊüìÊ£ãÁõò
            renderGrid();
            
            // ÁªëÂÆö‰∫ã‰ª∂
            bindEvents();
        }

        // Ê∏≤ÊüìÊï∞Áã¨Ê£ãÁõò
        function renderGrid() {
            const gridEl = document.getElementById('sudokuGrid');
            gridEl.innerHTML = '';

            for (let row = 0; row < 9; row++) {
                for (let col = 0; col < 9; col++) {
                    const cellEl = document.createElement('div');
                    cellEl.className = 'cell';
                    cellEl.dataset.row = row;
                    cellEl.dataset.col = col;

                    // ÂàùÂßãÊï∞Â≠óÔºà‰∏çÂèØ‰øÆÊîπÔºâ
                    if (sudokuGrid[row][col] !== 0) {
                        cellEl.classList.add('initial');
                        cellEl.textContent = sudokuGrid[row][col];
                    } else {
                        // Ê∏≤ÊüìÁ¨îËÆ∞
                        const notesEl = document.createElement('div');
                        notesEl.className = 'notes';
                        notesEl.innerHTML = '';
                        
                        // ÁîüÊàê9‰∏™Â∞èÊ†ºÂ≠êÁî®‰∫éÁ¨îËÆ∞
                        for (let n = 1; n <= 9; n++) {
                            const noteEl = document.createElement('span');
                            noteEl.textContent = notesGrid[row][col].has(n) ? n : '';
                            notesEl.appendChild(noteEl);
                        }
                        cellEl.appendChild(notesEl);
                    }

                    gridEl.appendChild(cellEl);
                }
            }
        }

        // ÁªëÂÆöÊâÄÊúâ‰∫§‰∫í‰∫ã‰ª∂
        function bindEvents() {
            // ÂçïÂÖÉÊ†ºÁÇπÂáª‰∫ã‰ª∂
            document.querySelectorAll('.cell').forEach(cell => {
                cell.addEventListener('click', () => {
                    // ÂèñÊ∂à‰πãÂâçÈÄâ‰∏≠
                    document.querySelectorAll('.cell.selected').forEach(c => c.classList.remove('selected'));
                    
                    // ÈÄâ‰∏≠ÂΩìÂâçÂçïÂÖÉÊ†ºÔºàÈùûÂàùÂßãÊï∞Â≠óÔºâ
                    if (!cell.classList.contains('initial')) {
                        cell.classList.add('selected');
                        selectedCell = {
                            row: parseInt(cell.dataset.row),
                            col: parseInt(cell.dataset.col)
                        };
                    } else {
                        // ÁÇπÂáªÂàùÂßãÊï∞Â≠óÔºöÈ´ò‰∫ÆÊâÄÊúâÁõ∏ÂêåÊï∞Â≠ó
                        const num = cell.textContent;
                        highlightSameNumbers(num);
                        selectedCell = null;
                    }
                    
                    // Ê∏ÖÈô§È´ò‰∫Æ
                    document.querySelectorAll('.cell.highlight').forEach(c => c.classList.remove('highlight'));
                });
            });

            // Êï∞Â≠óÈîÆÁõòÁÇπÂáª‰∫ã‰ª∂
            document.querySelectorAll('.number-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    if (!selectedCell) return;
                    
                    const num = parseInt(btn.dataset.num);
                    const { row, col } = selectedCell;

                    if (isNoteMode) {
                        // Á¨îËÆ∞Ê®°ÂºèÔºöÊ∑ªÂä†/ÁßªÈô§Á¨îËÆ∞
                        if (notesGrid[row][col].has(num)) {
                            notesGrid[row][col].delete(num);
                        } else {
                            notesGrid[row][col].add(num);
                        }
                    } else {
                        // Ê≠£Â∏∏Ê®°ÂºèÔºöÂ°´ÂÖ•Êï∞Â≠ó
                        sudokuGrid[row][col] = num;
                    }
                    
                    // ÈáçÊñ∞Ê∏≤Êüì
                    renderGrid();
                    // ÈáçÊñ∞ÈÄâ‰∏≠ÂΩìÂâçÂçïÂÖÉÊ†º
                    document.querySelector(`.cell[data-row="${row}"][data-col="${col}"]`)?.classList.add('selected');
                });
            });

            // ÈöæÂ∫¶ÂàáÊç¢
            document.querySelectorAll('.diff-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.diff-btn').forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    difficulty = btn.dataset.diff;
                    initGame();
                });
            });

            // ÊèêÁ§∫ÂäüËÉΩ
            document.getElementById('hint-btn').addEventListener('click', () => {
                if (hintCount <= 0) {
                    showMessage('ÊèêÁ§∫Ê¨°Êï∞Â∑≤Áî®ÂÆåÔºÅ', 'error');
                    return;
                }

                // ÊâæÁ¨¨‰∏Ä‰∏™Á©∫ÂçïÂÖÉÊ†º
                for (let row = 0; row < 9; row++) {
                    for (let col = 0; col < 9; col++) {
                        if (sudokuGrid[row][col] === 0) {
                            sudokuGrid[row][col] = solutionGrid[row][col];
                            hintCount--;
                            document.getElementById('hint-btn').textContent = `ÊèêÁ§∫ (${hintCount}Ê¨°)`;
                            showMessage(`Â∑≤‰∏∫‰Ω†Â°´ÂÖÖÁ¨¨${row+1}Ë°åÁ¨¨${col+1}ÂàóÁöÑÊï∞Â≠óÔºö${solutionGrid[row][col]}`, 'success');
                            renderGrid();
                            return;
                        }
                    }
                }
            });

            // Á¨îËÆ∞Ê®°ÂºèÂàáÊç¢
            document.getElementById('note-mode-btn').addEventListener('click', (e) => {
                isNoteMode = !isNoteMode;
                e.target.classList.toggle('active');
                e.target.textContent = isNoteMode ? 'ËæìÂÖ•Ê®°Âºè' : 'Á¨îËÆ∞Ê®°Âºè';
                showMessage(isNoteMode ? 'Â∑≤ÂàáÊç¢Âà∞Á¨îËÆ∞Ê®°Âºè' : 'Â∑≤ÂàáÊç¢Âà∞ËæìÂÖ•Ê®°Âºè');
            });

            // ÈáçÁΩÆÊ∏∏Êàè
            document.getElementById('reset-btn').addEventListener('click', () => {
                initGame();
                showMessage('Ê∏∏ÊàèÂ∑≤ÈáçÁΩÆÔºÅ');
            });

            // Ê£ÄÊü•Á≠îÊ°à
            document.getElementById('check-btn').addEventListener('click', () => {
                let isCorrect = true;
                let emptyCount = 0;

                for (let row = 0; row < 9; row++) {
                    for (let col = 0; col < 9; col++) {
                        if (sudokuGrid[row][col] === 0) {
                            emptyCount++;
                            isCorrect = false;
                        } else if (sudokuGrid[row][col] !== solutionGrid[row][col]) {
                            isCorrect = false;
                        }
                    }
                }

                if (emptyCount > 0) {
                    showMessage(`ËøòÊúâ${emptyCount}‰∏™Á©∫Ê†ºÊú™Â°´ÂÖÖÔºÅ`, 'error');
                } else if (isCorrect) {
                    showMessage('ÊÅ≠ÂñúÔºÅÊï∞Áã¨Ëß£Á≠îÊ≠£Á°ÆÔºÅüéâ', 'success');
                } else {
                    showMessage('Á≠îÊ°àÊúâËØØÔºåËØ∑Ê£ÄÊü•ÔºÅ', 'error');
                }
            });
        }

        // È´ò‰∫ÆÁõ∏ÂêåÊï∞Â≠ó
        function highlightSameNumbers(num) {
            document.querySelectorAll('.cell').forEach(cell => {
                if (cell.textContent === num) {
                    cell.classList.add('highlight');
                }
            });
        }

        // ÊòæÁ§∫ÊèêÁ§∫‰ø°ÊÅØ
        function showMessage(text, type = '') {
            const msgEl = document.getElementById('message');
            msgEl.textContent = text;
            msgEl.className = 'message';
            if (type) msgEl.classList.add(type);
            
            // 3ÁßíÂêéÊ∏ÖÈô§ÊèêÁ§∫
            setTimeout(() => {
                msgEl.textContent = '';
                msgEl.className = 'message';
            }, 3000);
        }
    </script>
</body>
</html>
