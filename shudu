            background: #FF9800;
        }

        .note-mode-btn.active {
            background: #F57C00;
        }

        .sudoku-grid {
            display: grid;
            grid-template-columns: repeat(9, 1fr);
            gap: 1px;
            background: #999;
            margin: 0 auto;
            max-width: 500px;
        }

        .cell {
            width: 100%;
            aspect-ratio: 1/1;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            position: relative;
        }

        /* 3x3ÂÆ´Ê†ºÂàÜÈöî */
        .cell:nth-child(3n) {
            border-right: 3px solid #333;
